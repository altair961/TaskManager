<UserControl x:Class="TaskManager.View.ProgressBarRam"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Grid>
            <ProgressBar Name="pbRam" HorizontalAlignment="Center" Height="20" Margin="0,3,0,0" VerticalAlignment="Top" Width="210" Value="{Binding Path=AvailableRam}" Foreground="DarkCyan" Background="PaleGoldenrod" Maximum="3069" Minimum="0" />
            <TextBlock Text="{Binding Path=AvailableRam, StringFormat={}{0:#} Availabale RAM}" TextAlignment="Center" Foreground="Black" FontFamily="Times New Roman" VerticalAlignment="Center" />
        </Grid>
    </StackPanel>
</UserControl>
